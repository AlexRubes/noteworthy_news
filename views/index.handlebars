<div class="container" id="wrapper-js">
    <div id="navbar-js">
        <ul>
            <li>
                <a href="/articles">Home</a>
            </li>
            <li>
                <a href="/savedarticles">Saved Articles</a>
            </li>
            <li>
                <form action="/scrape" method="POST" class="navbar-form navbar-left">
                    <button type="submit" class="btn btn-default mt-2">SCRAPE NEW ARTICLES!</button>
                </form>
            </li>
        </ul>
    </div>
    <div class="jumbotron">

    </div>
    <div class="row" id="articles-js">
        {{#each articles}}
        <div class="row titles">
            {{this.title}}
        </div>
        <div class=" row links">
            {{this.link}}
        </div>
        <form action="/save" method="POST">
            <input id="article-title" type="hidden" name="title" value="{{this.title}}">
            <input id="article-link" type="hidden" name="link" value={{this.link}}>
            <button type="submit" class="btn btn-default pull-right">SAVE ARTICLE</button>
        </form>
        {{/each}}
    </div>
</div>