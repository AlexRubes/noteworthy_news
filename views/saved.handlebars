<div class="container" id="wrapper-js">
    <div id="navbar-js">
        <ul>
            <li>
                <a href="/">Home</a>
            </li>
            <li>
                <a href="/saved">Saved Articles</a>
            </li>
            <li>
                <form action="/scrape" method="GET" class="navbar-form navbar-left">
                    <button type="submit" class="btn btn-default mt-2">SCRAPE NEW ARTICLES!</button>
                </form>
            </li>
        </ul>
    </div>
    <div class="jumbotron">
        <h1 class="header">NOTEworthy News</h1>
    </div>
    <div class="container">
        {{#each saved}}
        <div class="card">

            <h3 class="card-header">{{this.title}}</h3>
            <div class="row">
                <div class="col-lg-8 card-block">
                    <a href="{{this.link}}" target="_blank" class="card-link">Read more</a>
                </div>
                <div class="col-lg-4 align-self-end text-right">
                    <form action="/unsave/{{this.id}}" method="POST">
                        <button type="submit" class="delete" value="{{this._id}}">Delete From Saved</button>
                        <button type="button" class="seenotes" data-toggle="modal" data-target="#exampleModal" data-id="{{this._id}}">View Notes</button>
                    </form>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>

<!-- Modal -->
<div class="modal" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-dialog">
            <div class="modal-content"></div>
        </div>
    </div>
</div>