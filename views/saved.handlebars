<div class="container" id="wrapper-js">
    <div id="navbar-js">
        <ul>
            <li>
                <a href="/">Home</a>
            </li>
            <li>
                <a href="/saved">Saved Articles</a>
            </li>
            <li>
                <form action="/scrape" method="POST" class="navbar-form navbar-left">
                    <button type="submit" class="btn btn-default mt-2">SCRAPE NEW ARTICLES!</button>
                </form>
            </li>
        </ul>
    </div>
    <div class="jumbotron">
        <h1 class="header">NOTEworthy News</h1>
    </div>
    <div class="card-group" id="articles-js">
        <div class="card">
            <div class="card-body">
                {{#each saved}}
                <div class="story-body" id={{this._id}}>
                    <div>
                        <h3 class="card-title">{{this.title}}</h3>
                        <form action="/unsave/{{this.id}}" method="POST">
                            <button type="submit" class="delete" value="{{this._id}}">Delete From Saved</button>
                            <button type="button" class="seenotes" value="{{this._id}}" data-toggle="modal" data-target="#exampleModal">Article Notes</button>
                        </form>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
    </div>

    <!-- Modal -->
    <div class="modal" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Article Notes</h5>
                    <button type="button" id="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div id="user-input">
                        <p>Title</p>
                        <input id='titleinput' name='title' >
                        <br>
                        <p>Note</p>
                        <textarea id='bodyinput' name='body'></textarea>
                    </div>
                    <div id="results">
                        {{#each notes}} {{/each}}
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" id="close" data-dismiss="modal">Close</button>
                    <button data-id='" + "{{this._id}}" + "' id='savenote'>Save Note</button>
                </div>
            </div>
        </div>
    </div>
</div>